<h1>Users#index</h1>

<section>
<% @users.each do |user| %>
    <%= link_to user_path(user.id) do %>
        <div class="user">
          <div>
            <img src="<%= user.photo %>" />
          </div>
          <div>
            <h1><%= user.name %></h1>
            <p>Number of posts: <%= user.posts_counter || 0 %></p>
          </div>
        </div>
    <% end %>
<% end %>
</section>